<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/one_delhi_red" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:contentDescription="@string/back" app:srcCompat="@drawable/ic_back_arrow" app:tint="@color/white" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
    <TextView android:textSize="24sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:text="@string/buy_new_ticket" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_light"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_above="@+id/rv_bottom" android:layout_below="@+id/iv_back">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/card_knownDetails" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_8" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" app:cardCornerRadius="@dimen/standard_8">
                    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_marginBottom="@dimen/standard_8" android:layout_alignParentBottom="true">
                        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_bus_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_4" android:layout_centerHorizontal="true" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
                        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/current_route" android:layout_below="@+id/tv_bus_number" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
                        <TableRow android:id="@+id/tr_route" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_6">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/standard_8">
                                <TextView android:textSize="18sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_current_route" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_4" android:maxLines="1" android:maxLength="30" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
                                <ImageButton android:id="@+id/ib_edit_route" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_24dp" android:contentDescription="@string/edit" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_edit" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
                                <AutoCompleteTextView android:textSize="18sp" android:id="@+id/edit_route" android:paddingTop="@dimen/standard_4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:hint="@string/enter_current_route" android:inputType="text" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" android:importantForAutofill="2"/>
                                <ImageButton android:id="@+id/ib_clear_route" android:background="@color/white" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:contentDescription="@string/cross" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_cross" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
                            </RelativeLayout>
                        </TableRow>
                        <TableRow android:id="@+id/tr_source" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/tv_5">
                            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginEnd="@dimen/standard_8">
                                <TextView android:textSize="18sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_starting_stop" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_4" android:maxLines="1" android:maxLength="30" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
                                <ImageButton android:id="@+id/ib_edit_source" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="@dimen/dimen_24dp" android:contentDescription="@string/edit" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_edit" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
                                <AutoCompleteTextView android:textSize="18sp" android:id="@+id/edit_starting_stop" android:paddingTop="@dimen/standard_4" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:hint="@string/enter_source_stop" android:inputType="text" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" android:importantForAutofill="2"/>
                                <ImageButton android:id="@+id/ib_clear_starting" android:background="@color/white" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:contentDescription="@string/cross" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_cross" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
                            </RelativeLayout>
                        </TableRow>
                        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/source_stop" android:layout_below="@+id/tr_route" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/card_endingStop" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_marginBottom="@dimen/standard_16" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" app:cardCornerRadius="@dimen/standard_8">
                    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_marginBottom="@dimen/standard_8" android:layout_alignParentBottom="true">
                        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/destination_stop" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
                        <AutoCompleteTextView android:textSize="18sp" android:id="@+id/edit_destination_stop" android:paddingTop="@dimen/standard_4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:hint="@string/enter_destination_stop" android:layout_below="@+id/tv_4" android:inputType="text" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" android:importantForAutofill="2"/>
                        <ImageButton android:id="@+id/ib_clear_destination" android:background="@color/white" android:visibility="gone" android:layout_width="32dp" android:layout_height="32dp" android:layout_below="@+id/tv_4" android:contentDescription="@string/cross" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_cross" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center_horizontal" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_8" android:text="OR"/>
                <androidx.cardview.widget.CardView android:layout_gravity="center" android:id="@+id/card_select_fare" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_marginBottom="@dimen/standard_16" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" app:cardCornerRadius="@dimen/standard_8">
                    <RelativeLayout android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_marginBottom="@dimen/standard_8" android:layout_alignParentBottom="true">
                        <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_heading_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_fare" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
                        <RadioGroup android:orientation="horizontal" android:id="@+id/rg_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_marginBottom="@dimen/standard_8" android:layout_below="@+id/tv_heading_fare" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/rv_bottom" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/rv_tickets" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:text="@string/ticket_count" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
            <HorizontalScrollView android:scrollbars="none" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_1" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16">
                <RadioGroup android:orientation="horizontal" android:id="@+id/rg_ticket_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8"/>
            </HorizontalScrollView>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rv_fare" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rv_tickets">
            <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:text="@string/total_fare" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_4"/>
            <TextView android:textSize="24sp" android:textColor="@color/black" android:id="@+id/tv_total_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_4" android:layout_marginBottom="@dimen/standard_8" android:layout_below="@+id/tv_2" android:fontFamily="@font/roboto_regular" android:layout_marginStart="@dimen/standard_16"/>
            <TextView android:textSize="24sp" android:textColor="@color/metro_red" android:id="@+id/tv_payable_fare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_4" android:layout_marginBottom="@dimen/standard_8" android:layout_below="@+id/tv_2" android:fontFamily="@font/roboto_medium" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_8" android:layout_toEndOf="@+id/tv_total_fare"/>
            <TextView android:textSize="18sp" android:textColor="@color/white" android:id="@+id/tv_discount" android:background="@color/comfort_green" android:paddingTop="@dimen/standard_4" android:paddingBottom="@dimen/standard_4" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_2" android:fontFamily="@font/roboto_medium" android:paddingStart="@dimen/standard_8" android:paddingEnd="@dimen/standard_8" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true" android:elevation="2dp"/>
        </RelativeLayout>
        <Button android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/btn_buy" android:background="@color/one_delhi_red" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginBottom="@dimen/standard_16" android:text="@string/buy" android:layout_below="@+id/rv_fare" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16"/>
    </RelativeLayout>
</RelativeLayout>
