        <ImageView android:id="@+id/iv_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:contentDescription="@string/back" app:srcCompat="@drawable/ic_back_arrow" app:tint="@color/black" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
        <TextView android:textSize="24sp" android:textColor="@color/black" android:id="@+id/tv_heading_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:text="@string/feedback_complaint" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_light"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4dp" android:layout_marginBottom="@dimen/standard_4" android:layout_above="@+id/btn_submit" android:layout_below="@+id/rl_heading">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_marginBottom="@dimen/standard_10" android:layout_below="@+id/iv_back" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16">
            <RelativeLayout android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:text="Personal Details"/>
                <ImageView android:id="@+id/img_collapse_personal_details" android:background="@drawable/notif_circle" android:padding="@dimen/dimen_3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_15dp" android:layout_marginBottom="@dimen/dimen_4dp" android:src="@drawable/ic_arrow_right" android:rotation="90" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" android:elevation="5dp"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_personal_details" android:layout_width="match_parent" android:layout_height="wrap_content">
