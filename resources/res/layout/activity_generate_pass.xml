            <View android:id="@+id/view_1" android:background="@color/black" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/standard_8" android:layout_below="@+id/tv_totalFare"/>
            <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/passenger_name" android:layout_below="@+id/view_1" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
