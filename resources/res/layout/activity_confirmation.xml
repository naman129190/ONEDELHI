<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/one_delhi_red" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="@dimen/dimen_24dp">
        <RelativeLayout android:id="@+id/rv_main" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:textSize="28sp" android:textColor="@color/white" android:id="@+id/tv_payment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:text="@string/payment_successful" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_medium"/>
            <TextView android:textSize="28sp" android:textColor="@color/white" android:id="@+id/tv_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:layout_below="@+id/tv_payment" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_light"/>
            <ImageView android:id="@+id/iv_loading" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:layout_marginBottom="@dimen/standard_16" android:layout_below="@+id/tv_status" android:layout_centerHorizontal="true" app:srcCompat="@drawable/loading"/>
        </RelativeLayout>
        <Button android:id="@+id/btn_refresh" android:background="@drawable/round_button" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_24dp" android:layout_marginBottom="@dimen/standard_48" android:text="Get ticket" android:layout_alignParentBottom="true"/>
        <TextView android:textColor="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Do not press back button or leave this screen." android:layout_above="@+id/rv_main" android:layout_alignParentBottom="true" android:fontFamily="@font/roboto_bold" android:textAlignment="center"/>
    </RelativeLayout>
</RelativeLayout>
