<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/rv_background" android:background="@color/one_delhi_red" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/rv_allTickets" android:layout_width="wrap_content" android:layout_height="@dimen/standard_48" android:layout_marginEnd="@dimen/standard_8" android:layout_toStartOf="@+id/rv_help">
            <ImageButton android:id="@+id/iv_viewAllTickets" android:layout_width="wrap_content" android:layout_height="wrap_content" android:tint="@color/white" android:contentDescription="@string/view_all_tickets" app:srcCompat="@drawable/ic_past_tickets" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
            <TextView android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_all" android:layout_centerInParent="true" android:layout_toEndOf="@+id/iv_viewAllTickets"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rv_help" android:layout_width="wrap_content" android:layout_height="@dimen/standard_48" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/iv_help" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/report_problem" app:srcCompat="@drawable/ic_whatsapp" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
            <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_help" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Issue with ticket?" android:layout_centerInParent="true" android:layout_toEndOf="@+id/iv_help"/>
        </RelativeLayout>
        <ImageView android:id="@+id/iv_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/cross" android:layout_alignParentStart="true" app:srcCompat="@drawable/ic_cross" app:tint="@color/white" style="@style/Widget.App.Button.OutlinedButton.IconOnly"/>
        <androidx.cardview.widget.CardView android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_16" android:layout_centerInParent="true" android:elevation="5dp" app:cardCornerRadius="5dp" app:cardElevation="5dp">
            <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_activeTicket" android:padding="@dimen/standard_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_active_ticket_available" android:textAlignment="center"/>
            <RelativeLayout android:id="@+id/rv_QR" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/img_ticketQR" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:contentDescription="@string/ticket_qr"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rv_ticket" android:padding="@dimen/standard_16" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:id="@+id/iv_ticket_expire" android:padding="@dimen/standard_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true" android:contentDescription="@string/invalid_ticket" app:srcCompat="@drawable/ic_invalid" app:tint="@color/one_delhi_red"/>
                <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_agency" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/delhi_transport_dept" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_regular"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_busRegNum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_agency" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_totalFare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_agency" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                <View android:id="@+id/view_1" android:background="@color/black" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_totalFare"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/bus_route" android:layout_below="@+id/view_1" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_busRoute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_1" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/fare" android:layout_below="@+id/view_1" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_farePerTicket" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_2" android:fontFamily="@font/roboto_medium" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/tickets" android:layout_below="@+id/tv_farePerTicket" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_ticketCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_3" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_8" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/bus_type" android:layout_below="@+id/tv_ticketCount" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_busType" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_8" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/booking_time" android:layout_below="@+id/tv_busRoute" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_bookingTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_4" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/starting_stop" android:layout_below="@+id/tv_bookingTime" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_startingStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/tv_5" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/ending_stop" android:layout_below="@+id/tv_startingStop" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="18sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_endingStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/tv_6" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                <TextView android:textSize="14sp" android:textColor="@color/gray_444444" android:id="@+id/tv_ticketID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_endingStop" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_regular"/>
                <RelativeLayout android:id="@+id/rv_showQR" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_ticketID" android:elevation="2dp">
                    <ImageView android:padding="@dimen/standard_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/show_qr_code" android:layout_toStartOf="@+id/tv_showQR" app:srcCompat="@drawable/ic_qr_code" app:tint="@color/white"/>
                    <TextView android:textSize="16sp" android:textColor="@color/white" android:id="@+id/tv_showQR" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/show_qr_code" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_medium"/>
                </RelativeLayout>
                <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_7" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:text="@string/eta" android:layout_below="@+id/rv_showQR" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <Button android:textColor="@color/white" android:id="@+id/btn_payNow" android:background="@color/one_delhi_red" android:padding="@dimen/standard_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_16" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_share" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_16" android:layout_alignParentBottom="true" android:contentDescription="Share" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_share"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
