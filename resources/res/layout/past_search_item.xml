<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rl_main" android:paddingTop="@dimen/standard_16" android:paddingBottom="@dimen/standard_16" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:contentDescription="@string/mode" android:layout_marginStart="@dimen/standard_16"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toEndOf="@+id/iv_mode">
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
                <TextView android:textSize="16sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_stop_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16"/>
                <TextView android:textSize="12sp" android:textColor="#828282" android:ellipsize="marquee" android:id="@+id/tv_stop_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scrollHorizontally="true" android:singleLine="true" android:layout_below="@+id/tv_stop_name" android:marqueeRepeatLimit="marquee_forever" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16"/>
            </RelativeLayout>
            <TextView android:id="@+id/tv_stop_id" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/view_1" android:background="@color/white_eceff1" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/rl_main" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16"/>
</RelativeLayout>
