<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="58dp">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rv_main" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/rv_1" android:background="@drawable/blue_white_gradient" android:layout_width="match_parent" android:layout_height="220dp">
                <RelativeLayout android:id="@+id/rv_complaint" android:background="@drawable/notif_circle" android:padding="@dimen/standard_8" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:layout_toStartOf="@+id/rv_notifications">
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_complaint"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/rv_notifications" android:background="@drawable/notif_circle" android:padding="@dimen/standard_8" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_16" android:layout_alignParentEnd="true">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" app:srcCompat="@drawable/ic_notification_bell"/>
                </RelativeLayout>
                <TextView android:textSize="22sp" android:textColor="@color/black" android:id="@+id/tv_greetings" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:fontFamily="@font/roboto_bold" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16"/>
                <TextView android:textSize="16sp" android:textColor="#828282" android:id="@+id/tv_1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:text="Where are you travelling today?" android:layout_below="@+id/tv_greetings" android:fontFamily="@font/roboto_regular" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16"/>
                <ImageView android:id="@+id/iv_train" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_below="@+id/tv_1" app:srcCompat="@drawable/ic_train"/>
            </RelativeLayout>
            <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="-36dp" android:layout_below="@+id/rv_1">
                <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:id="@+id/rv_ticket" android:background="@drawable/white_box_menu_item" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="24dp" android:layout_marginEnd="@dimen/standard_16">
                        <TextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_2" android:padding="@dimen/standard_12" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Buy\10Ticket" android:lines="2" android:layout_centerVertical="true" android:fontFamily="@font/roboto_bold" android:layout_toStartOf="@+id/iv_ticket_img_1"/>
                        <ImageView android:id="@+id/iv_ticket_img_1" android:padding="@dimen/standard_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-15dp" android:layout_alignParentTop="true" android:rotation="145" android:layout_marginEnd="-25dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_ticket_1"/>
                    </RelativeLayout>
                    <RelativeLayout android:id="@+id/rv_pass" android:background="@drawable/white_box_menu_item" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="24dp">
                        <TextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/tv_3" android:padding="@dimen/standard_12" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Buy\10Daily Pass" android:lines="2" android:layout_centerVertical="true" android:fontFamily="@font/roboto_bold"/>
                        <ImageView android:id="@+id/iv_ticket_img_2" android:padding="@dimen/standard_12" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-15dp" android:layout_alignParentTop="true" android:rotation="145" android:layout_marginEnd="-25dp" android:layout_alignParentEnd="true" app:srcCompat="@drawable/ic_ticket_1"/>
                    </RelativeLayout>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rv_lastTicket" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:layout_below="@+id/rv_main">
            <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_10" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:layout_marginBottom="@dimen/standard_8" android:text="Recent Ticket" android:fontFamily="@font/roboto_medium" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentStart="true"/>
            <TextView android:textSize="16sp" android:textColor="#828282" android:id="@+id/tv_allTicket" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:layout_marginBottom="@dimen/standard_8" android:text="View all" android:fontFamily="@font/roboto_regular" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true"/>
            <RelativeLayout android:paddingTop="@dimen/standard_4" android:paddingBottom="@dimen/standard_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_10">
                <androidx.cardview.widget.CardView android:id="@+id/card_past_ticket" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_centerInParent="true" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" app:cardCornerRadius="5dp">
                    <ImageView android:id="@+id/iv_ticket_expire" android:padding="@dimen/standard_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="200dp" android:layout_centerInParent="true" android:contentDescription="@string/invalid_ticket" app:srcCompat="@drawable/ic_invalid" app:tint="@color/one_delhi_red"/>
                    <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_noTicket" android:padding="@dimen/standard_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_ticket_to_show" android:textAlignment="center"/>
                    <View android:id="@+id/view_color" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/standard_16" android:layout_marginTop="@dimen/standard_8"/>
                    <RelativeLayout android:id="@+id/rv_ticketCard" android:padding="@dimen/standard_16" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_busRoute" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_ticketBookingTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_busRoute" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_farePerTicket" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_ticketCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_farePerTicket" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_ticketTotalFare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_ticketCount" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_startingStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:singleLine="true" android:layout_below="@+id/tv_ticketBookingTime" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/tv_endingStop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:singleLine="true" android:layout_below="@+id/tv_startingStop" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                        <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_ticketID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_endingStop" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_regular"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rv_lastPass" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/rv_lastTicket">
            <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_20" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:layout_marginBottom="@dimen/standard_8" android:text="Recent Pass" android:fontFamily="@font/roboto_medium" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentStart="true"/>
            <TextView android:textSize="16sp" android:textColor="#828282" android:id="@+id/tv_allPass" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:layout_marginBottom="@dimen/standard_8" android:text="View all" android:fontFamily="@font/roboto_regular" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true"/>
            <RelativeLayout android:paddingTop="@dimen/standard_4" android:paddingBottom="@dimen/standard_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_20">
                <androidx.cardview.widget.CardView android:id="@+id/card_past_pass" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_8" android:layout_centerInParent="true" android:layout_marginStart="@dimen/standard_16" android:layout_marginEnd="@dimen/standard_16" app:cardCornerRadius="5dp">
                    <ImageView android:id="@+id/iv_pass_expire" android:padding="@dimen/standard_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="120dp" android:layout_centerInParent="true" android:contentDescription="@string/invalid_ticket" app:srcCompat="@drawable/ic_invalid" app:tint="@color/one_delhi_red"/>
                    <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_noPass" android:padding="@dimen/standard_16" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no_pass_to_show" android:textAlignment="center"/>
                    <RelativeLayout android:id="@+id/rv_passCard" android:paddingBottom="@dimen/standard_16" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingStart="@dimen/standard_16" android:paddingEnd="@dimen/standard_16">
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_11" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:text="@string/dtc_daily_pass" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                        <TextView android:textSize="14sp" android:textColor="@color/white" android:id="@+id/tv_passType" android:paddingTop="@dimen/standard_4" android:paddingBottom="@dimen/standard_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_12" android:fontFamily="@font/roboto_regular" android:paddingStart="@dimen/standard_8" android:paddingEnd="@dimen/standard_8" android:layout_marginEnd="@dimen/standard_16" android:layout_alignParentEnd="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_passBookingTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_11" android:fontFamily="@font/roboto_regular" android:layout_alignParentStart="true"/>
                        <TextView android:textSize="18sp" android:textColor="@color/black" android:id="@+id/tv_passTotalFare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10dp" android:layout_below="@+id/tv_passType" android:fontFamily="@font/roboto_regular" android:layout_alignParentEnd="true"/>
                        <TextView android:textSize="14sp" android:textColor="@color/black" android:id="@+id/tv_passID" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_10" android:layout_below="@+id/tv_passTotalFare" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_regular"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
