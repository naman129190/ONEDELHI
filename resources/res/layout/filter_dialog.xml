<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/round_button_white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_top_bar" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="@color/red_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_16" android:text="Filter Search"/>
        <View android:background="@color/red_bar" android:layout_width="match_parent" android:layout_height="2dp"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/btn_apply_filter" android:layout_below="@+id/ll_top_bar" android:layout_alignParentStart="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:layout_marginBottom="@dimen/standard_14" android:text="Station Type" android:layout_marginStart="@dimen/standard_14"/>
            <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                <RadioGroup android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/rg_station_type" android:padding="@dimen/standard_4" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <RadioButton android:textSize="14sp" android:textColor="@color/radio_buttons_text_color" android:layout_gravity="center" android:id="@+id/rb_all_station" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_10" android:layout_width="100dp" android:layout_height="42dp" android:checked="true" android:button="@drawable/selector_ev_charger" android:text="ALL" android:drawablePadding="@dimen/standard_10" android:drawableStart="@drawable/ic_baseline_location_on_24" android:layout_marginEnd="@dimen/standard_8"/>
                    <RadioButton android:textSize="11sp" android:textColor="@color/radio_buttons_text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/rb_evc" android:background="@drawable/selector_ev_charger" android:paddingTop="@dimen/standard_4" android:paddingBottom="@dimen/standard_4" android:layout_width="100dp" android:layout_height="42dp" android:button="@drawable/selector_ev_charger" android:text="Charging Station" android:drawableStart="@drawable/ic_electric_charger" android:textAlignment="center" android:paddingStart="@dimen/standard_8" android:paddingEnd="@dimen/standard_4" android:layout_marginEnd="@dimen/standard_8"/>
                    <RadioButton android:textSize="11sp" android:textColor="@color/radio_buttons_text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/rb_bss" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_4" android:layout_width="100dp" android:layout_height="42dp" android:button="@drawable/selector_ev_charger" android:text="Battery Swap" android:lines="3" android:drawableStart="@drawable/ic_lithium" android:textAlignment="center" android:layout_marginEnd="@dimen/standard_8"/>
                </RadioGroup>
            </HorizontalScrollView>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_all_filters" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_chargers_and_vehicle" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:layout_marginBottom="@dimen/standard_14" android:text="Chargers" android:layout_marginStart="@dimen/standard_14"/>
                    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                        <RadioGroup android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/rg_chargers" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <RadioButton android:textSize="14sp" android:textColor="@color/radio_buttons_text_color" android:layout_gravity="center" android:id="@+id/rb_all_chargers" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_10" android:layout_width="100dp" android:layout_height="42dp" android:checked="true" android:button="@drawable/selector_ev_charger" android:text="ALL" android:drawablePadding="@dimen/standard_10" android:drawableStart="@drawable/ic_baseline_electric__24" android:layout_marginEnd="@dimen/standard_8"/>
                            <RadioButton android:textSize="14sp" android:textColor="@color/radio_buttons_text_color" android:gravity="center" android:id="@+id/rb_ac_chargers" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_10" android:layout_width="100dp" android:layout_height="42dp" android:button="@drawable/selector_ev_charger" android:text="AC" android:drawablePadding="@dimen/standard_10" android:drawableStart="@drawable/ic_ac" android:textAlignment="center" android:layout_marginEnd="@dimen/standard_8"/>
                            <RadioButton android:textSize="14sp" android:textColor="@color/radio_buttons_text_color" android:gravity="center" android:id="@+id/rb_dc_charger" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_10" android:layout_width="100dp" android:layout_height="42dp" android:button="@drawable/selector_ev_charger" android:text="DC" android:drawablePadding="@dimen/standard_10" android:drawableStart="@drawable/ic_dc" android:textAlignment="center" android:layout_marginEnd="@dimen/standard_8"/>
                        </RadioGroup>
                    </HorizontalScrollView>
                    <LinearLayout android:orientation="vertical" android:id="@+id/ll_vehicle_type" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_vehicle_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:layout_marginBottom="@dimen/standard_14" android:text="Vehicle Type" android:layout_marginStart="@dimen/standard_14"/>
                        </RelativeLayout>
                        <HorizontalScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                            <RadioGroup android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/rg_vehicle_type" android:layout_width="wrap_content" android:layout_height="wrap_content">
                                <RadioButton android:textSize="14sp" android:textColor="@color/radio_buttons_text_color" android:layout_gravity="center" android:id="@+id/rb_2W" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_10" android:layout_width="100dp" android:layout_height="42dp" android:button="@drawable/selector_ev_charger" android:text="2W" android:drawablePadding="@dimen/standard_10" android:drawableStart="@drawable/ic_baseline_electric_bike_24" android:layout_marginEnd="@dimen/standard_8"/>
                                <RadioButton android:textSize="14sp" android:textColor="@color/radio_buttons_text_color" android:gravity="center" android:id="@+id/rb_3W" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_10" android:layout_width="100dp" android:layout_height="42dp" android:button="@drawable/selector_ev_charger" android:text="3W" android:drawablePadding="@dimen/standard_10" android:drawableStart="@drawable/ic_baseline_electric_rickshaw_24" android:textAlignment="center" android:layout_marginEnd="@dimen/standard_8"/>
                                <RadioButton android:textSize="14sp" android:textColor="@color/radio_buttons_text_color" android:gravity="center" android:id="@+id/rb_4W" android:background="@drawable/selector_ev_charger" android:padding="@dimen/standard_10" android:layout_width="100dp" android:layout_height="42dp" android:button="@drawable/selector_ev_charger" android:text="4W" android:drawablePadding="@dimen/standard_10" android:drawableStart="@drawable/ic_baseline_electric_car_24" android:textAlignment="center" android:layout_marginEnd="@dimen/standard_8"/>
                            </RadioGroup>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:layout_marginBottom="@dimen/standard_14" android:text="Vendor" android:layout_marginStart="@dimen/standard_14"/>
                <RelativeLayout android:id="@+id/rv_spinner" android:background="@drawable/white_box_menu_item" android:padding="@dimen/dimen_4dp" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="@dimen/standard_8" android:layout_marginBottom="8dp" android:layout_weight="0.4" android:layout_marginStart="8dp" android:layout_marginEnd="8dp">
                    <Spinner android:id="@+id/spinner_vendors" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_10"/>
                </RelativeLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_connectors" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:id="@+id/ll_ac_connectors" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:layout_marginBottom="@dimen/standard_14" android:text="Connector (AC) " android:layout_marginStart="@dimen/standard_14"/>
                        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_ac_connectors" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/standard_4" android:layout_marginEnd="@dimen/standard_4"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:id="@+id/ll_dc_connectors" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_16" android:layout_marginBottom="@dimen/standard_14" android:text="Connector (DC) " android:layout_marginStart="@dimen/standard_14"/>
                        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_dc_connectors" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/standard_4" android:layout_marginEnd="@dimen/standard_4"/>
                    </LinearLayout>
                    <View android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/standard_10" android:layout_marginBottom="@dimen/standard_12"/>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_available_chargers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Available Chargers Only " android:layout_marginStart="@dimen/standard_14"/>
                        <Switch android:id="@+id/switch_available_chargers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/tv_available_chargers" android:layout_marginEnd="@dimen/standard_10" android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/standard_12" android:layout_marginBottom="@dimen/standard_12"/>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/one_delhi_red" android:id="@+id/tv_free" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Free " android:layout_marginStart="@dimen/standard_14"/>
                        <TextView android:textSize="@dimen/dimen_16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/tv_chargers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Chargers Only " android:layout_toRightOf="@+id/tv_free"/>
                        <Switch android:id="@+id/switch_free_chargers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBaseline="@+id/tv_chargers" android:layout_marginEnd="@dimen/standard_10" android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View android:background="@color/light_grey" android:layout_width="match_parent" android:layout_height="@dimen/dimen_1dp" android:layout_marginTop="@dimen/standard_12" android:layout_marginBottom="@dimen/standard_10"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button android:textColor="@color/white" android:id="@+id/btn_apply_filter" android:background="@drawable/round_button_red" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/standard_16" android:text="Filter" android:layout_above="@+id/view" android:textAllCaps="false" app:backgroundTint="@null"/>
    <View android:id="@+id/view" android:layout_width="match_parent" android:layout_height="@dimen/standard_14" android:layout_alignParentBottom="true"/>
</RelativeLayout>
