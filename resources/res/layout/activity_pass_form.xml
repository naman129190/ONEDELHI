                    <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_8" android:text="@string/pass_type_asterisks" android:layout_below="@+id/rv_form_fields" android:fontFamily="@font/roboto_regular"/>
