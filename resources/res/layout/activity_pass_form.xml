                <RelativeLayout android:paddingLeft="@dimen/standard_16" android:paddingTop="@dimen/standard_8" android:paddingRight="@dimen/standard_16" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/fields_mandatory" android:fontFamily="@font/roboto_regular"/>
