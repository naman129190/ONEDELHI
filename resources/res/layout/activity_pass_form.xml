                    <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_ac_pass" android:background="@drawable/pass_type_round_box" android:padding="@dimen/standard_8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_16" android:layout_below="@+id/tv_2" android:fontFamily="@font/roboto_regular" android:layout_toEndOf="@+id/tv_non_ac_pass"/>
