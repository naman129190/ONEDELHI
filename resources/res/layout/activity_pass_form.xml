        <TextView android:textSize="24sp" android:textColor="@color/metro_red" android:id="@+id/tv_totalFare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_16" android:layout_below="@+id/tv_0" android:fontFamily="@font/roboto_bold"/>
