    <TextView android:textSize="24sp" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/standard_14" android:text="@string/buy_new_pass" android:layout_centerHorizontal="true" android:fontFamily="@font/roboto_light"/>
    <TextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/tv_5" android:background="@color/white" android:paddingTop="@dimen/standard_4" android:paddingBottom="@dimen/standard_4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/standard_16" android:text="@string/valid_only_in_dtc" android:layout_above="@+id/card_pass" android:fontFamily="@font/roboto_medium" android:textAlignment="center" android:paddingStart="@dimen/standard_16" android:paddingEnd="@dimen/standard_16"/>
